<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Edit contact"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameEditInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:endIconMode="clear_text"
        app:errorTextColor="@color/red"
        app:startIconDrawable="@drawable/ic_name_pre">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:maxLength="16"
            android:inputType="textCapWords"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lastNameEditInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:endIconMode="clear_text"
        app:errorTextColor="@color/red"
        app:startIconDrawable="@drawable/ic_name_pre">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLastName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="textCapWords"
            android:maxLength="16"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error"
        app:errorTextColor="@color/red"
        app:prefixText="+998"
        app:startIconDrawable="@drawable/ic_number_pre">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNumber_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="number"
            android:maxLength="9"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="@color/button_cancel"
            android:text="cancel"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="@color/button_add"
            android:text="save"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>